#:kivy 1.0.9

<PongPaddle>:
    size: 25, 30
    canvas:
        Color:
            rgb: 1., .6, .3
        Rectangle:
            pos:self.pos
            size:self.size
<Arena>:
    size: 500, 400
    canvas:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            pos: self.pos
            size: self.width + 10, self.height + 10

<Indicator>:
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            pos: self.pos
            size: 10, 10


<PongGame>:
    arena: arena_1

    canvas:
        Color:
            rgb: .2, .8, .0   
        Rectangle:
            pos: 0, 0
            size: self.width, self.height

    Arena:
        id: arena_1
