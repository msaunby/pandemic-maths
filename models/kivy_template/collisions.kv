#:kivy 1.0.9

<PongPaddle>:
    size: 25, 30
    canvas:
        Color:
            rgb: 1., .6, .3
        Rectangle:
            pos:self.pos
            size:self.size
<Arena>:
    canvas:
        Color:
            rgb: 0.1, 0.1, 0.1
        Rectangle:
            pos: self.pos
            size: 400, 300

<PongGame>:
    player1: player_left
    player2: player_right
    arena: arena_1

    canvas:
        Color:
            rgb: .2, .8, .0   
        Rectangle:
            pos: 0, 0
            size: self.width, self.height

    Arena:
        id: arena_1

    PongPaddle:
        id: player_left
        x: root.x
        y: 0
        size: 5, root.height
        
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
        

